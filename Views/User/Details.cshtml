@model OrgDocs.Models.ApplicationUser

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h4>Username: @Model.UserName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Username
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Role" class="control-label"></label>
        </dt>
        <dd class="col-sm-4">
            <form asp-action="Details">
                <div class="form-group mb-2">

                    <select class="form-control form-control-sm" name="Role" asp-items="ViewBag.UserRoles">
                    </select>
                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn-sm btn-primary" />
                </div>
            </form>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index"><i style="font-size:1.5em" class="far fa-arrow-alt-circle-left"></i></a>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}